head 
	title #{title}
	link(rel='stylesheet' type="text/css" href="/stylesheets/vendor/font-awesome-4.3.0/css/font-awesome.min.css")
	link(rel='stylesheet' type="text/css" href="stylesheets/main.css")

body 
	
	
	div(class="icon speedometer")
		
		i(class="fa fa-tachometer fa-4x") 
		<br/>
		span 12.30 wpm
	div(class="icon timer")
		i(class="fa fa-clock-o fa-4x")
		<br/>
		span 1m 30s

	div(class="text")
		ul
			li(class="letter") Welcome to typeBook!
		p(id="holding-text") [Press enter to begin]


	div(class="icon reset")
		i(class="fa fa-refresh fa-4x" id="reset")

	div(class="icon add")
		i(class="fa fa-plus-circle fa-4x")

	script(id="letters" type="x-tmpl-mustache")
		li(class="letter {{class}}")
			pre {{value}}




	script(src="js/vendor/jquery.min.js")
	script(src="js/vendor/mustache.min.js")
	script(src="js/models/Character.js")
	script(src="js/models/Display.js")
	script(src="js/models/Game.js")
	script(src="js/models/TextProcessor.js")
	script(src="js/texts/textOne.js")
	script(src="js/homepage.js")
